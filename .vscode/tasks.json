{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "/usr/local/dotnet/current/dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/albumapi/albumapi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "/usr/local/dotnet/current/dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/albumapi/albumapi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "/usr/local/dotnet/current/dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/albumapi/albumapi.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "shell",
      "label": "npm install",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/albumviewer"
      },
      "presentation": {
        "close": true
      }
    },
    {
      "label": "Dapr up: Album Viewer",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "albumviewer",
        "--app-port",
        "3000",
        "--dapr-grpc-port",
        "3101",
        "--dapr-http-port",
        "3180"
      ],
      "isBackground": true,
      "presentation": {
        "panel": "new",
        "group": "dapr-output",
        "close": true
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "beginsPattern": "^.*Starting Dapr with id.*",
          "endsPattern": "^.*up and running.*"
        }
      },
      "dependsOn": ["npm install"]
    },
    {
      "label": "Dapr up: Album API",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "albumapi",
        "--components-path",
        "${workspaceFolder}/dapr-components/local",
        "--app-port",
        "80",
        "--dapr-grpc-port",
        "3501",
        "--dapr-http-port",
        "3500"
      ],
      "isBackground": true,
      "presentation": {
        "panel": "new",
        "group": "dapr-output",
        "close": true
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "beginsPattern": "^.*Starting Dapr with id.*",
          "endsPattern": "^.*up and running.*"
        }
      },
      "dependsOn": ["build"]
    },
    {
      "label": "Dapr down: Album API",
      "command": "dapr",
      "args": ["stop", "--app-id", "albumapi"],
      "problemMatcher": [],
      "presentation": {
        "close": true
      }
    },
    {
      "label": "Dapr down: Album Viewer",
      "command": "dapr",
      "args": ["stop", "--app-id", "albumviewer"],
      "problemMatcher": [],
      "presentation": {
        "close": true
      }
    }
  ]
}
