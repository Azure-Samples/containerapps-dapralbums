{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "/usr/bin/dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/aca-csharp/aca-csharp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "/usr/bin/dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/aca-csharp/aca-csharp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "/usr/bin/dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/aca-csharp/aca-csharp.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Dapr Frontend",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "nodeapp",
        "--app-port",
        "3000",
        "--dapr-grpc-port",
        "3101",
        "--dapr-http-port",
        "3180"
      ],
      "problemMatcher": []
    },
    {
      "label": "Dapr API",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "album-api",
        "--components-path",
        "${workspaceFolder}/components",
        "--app-port",
        "5000",
        "--dapr-grpc-port",
        "3501",
        "--dapr-http-port",
        "3500"
      ],
      "problemMatcher": []
    }
  ]
}
